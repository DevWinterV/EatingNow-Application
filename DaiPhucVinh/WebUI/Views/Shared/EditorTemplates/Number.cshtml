@model int

@Html.TextBoxFor(model => model)
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").addClass("form-control");
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").mask('000.000.000.000.000', { reverse: true });

        @*$().TouchSpin({
            min: @(double.MinValue),
            max: @(double.MaxValue),
            //decimals: 4, //always display 4 digits
            forcestepdivisibility: "none",
            verticalbuttons: true,
            postfix: "@postfix",
        });*@
    });
</script>